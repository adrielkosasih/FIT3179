{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#d6dee3",
  "width": 400,
  "height": 350,
  "data": {
    "url": "https://raw.githubusercontent.com/adrielkosasih/FIT3179/main/Assignment_2/data/life_exp_region.csv",
    "format": {
      "type": "csv",
      "parse": {
        "life_exp": "number"
      }
    }
  },
  "params": [
    {
      "name": "Region_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Africa",
          "Americas",
          "Asia",
          "Europe",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "Africa",
          "Americas",
          "Asia",
          "Europe",
          "Oceania"
        ],
        "name": "Region Selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Region_selection == null || datum.region == Region_selection"
    }
  ],
  "encoding": {
    "x": {
      "field": "year",
      "type": "temporal",
      "title": null
    },
    "y": {
      "field": "life_exp",
      "type": "quantitative",
      "title": "Average Life Expectancy",
      "axis": {
        "titleFontSize": 10
      }
    }
  },
  "layer": [
    {
      "mark": {
        "type": "line",
        "point": {
          "filled": false,
          "fill": "white"
        }
      },
      "encoding": {
        "color": {
          "field": "region",
          "type": "nominal",
          "scale": {
            "domain": [
              "Africa",
              "Americas",
              "Asia",
              "Europe",
              "Oceania"
            ],
            "range": [
              "#d55e00",
              "#cc79a7",
              "#0072b2",
              "#009e73",
              "#f0e442"
            ]
          }
        },
        "tooltip": [
          {
            "field": "region",
            "type": "nominal",
            "title": "Region"
          },
          {
            "field": "life_exp",
            "type": "quantitative",
            "title": "Life Expectancy",
            "format": ".2f"
          },
          {
            "field": "year",
            "type": "temporal",
            "title": "Year",
            "axis": {
              "format": "%Y"
            }
          }
        ]
      }
    }
  ]
}
{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "background": "#90a0a6",
  "width": "container",
  "height": 350,
  "data": {
    "url": "https://raw.githubusercontent.com/adrielkosasih/FIT3179/main/Assignment_2/data/life_exp_region.csv",
    "format": {
      "type": "csv",
      "parse": {
        "life_exp": "number"
      }
    }
  },
  "params": [
    {
      "name": "Region_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Africa",
          "Americas",
          "Asia",
          "Europe"
        ],
        "labels": [
          "Show All",
          "Africa",
          "Americas",
          "Asia",
          "Europe"
        ],
        "name": "Region Selection: "
      }
    }
  ],
  "transform": [
    {
      "filter": "Region_selection == null || datum.region == Region_selection"
    }
  ],
  "encoding": {
    "x": {
      "field": "year",
      "type": "temporal",
      "title": null
    },
    "y": {
      "field": "life_exp",
      "type": "quantitative",
      "title": "Average Life Expectancy",
      "axis": {
        "titleFontSize": 10
      }
    },
    "color": {
      "condition": {
        "selection": "hover",
        "field": "region",
        "type": "nominal",
        "title": null
      },
      "value": "grey"
    },
    "opacity": {
      "condition": {
        "selection": "hover",
        "value": 1
      },
      "value": 0.075
    },
    "tooltip": [
      {
        "field": "region",
        "type": "nominal",
        "title": "Region"
      },
      {
        "field": "year",
        "type": "temporal",
        "title": "Year",
        "axis": {
          "format": "%Y"
        }
      },
      {
        "field": "life_exp",
        "type": "quantitative",
        "title": "Average Life Expectancy",
        "format": ".2f"
      }
    ]
  },
  "layer": [
    {
      "selection": {
        "hover": {
          "type": "single",
          "on": "mouseover",
          "empty": "all",
          "fields": [
            "region"
          ],
          "init": {
            "region": "Asia"
          }
        }
      },
      "mark": {
        "type": "line",
        "strokeWidth": 8,
        "stroke": "transparent"
      }
    },
    {
      "mark": {
        "type": "line"
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "field": "life_exp",
          "type": "quantitative",
          "format": ".2f"
        },
        "color": {
          "value": "black"
        },
        "opacity": {
          "condition": {
            "test": "datum['region'] == 'Europe'&& datum['life_exp'] > 80",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {
            "field": "region",
            "type": "nominal",
            "title": "Region"
          },
          {
            "field": "year",
            "type": "temporal",
            "title": "Year",
            "axis": {
              "format": "%Y"
            }
          },
          {
            "field": "life_exp",
            "type": "quantitative",
            "title": "Average Life Expectancy",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "circle",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 10,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "field": "life_exp",
          "type": "quantitative",
          "format": ".2f"
        },
        "color": {
          "value": "black"
        },
        "opacity": {
          "condition": {
            "test": "datum['region'] == 'Europe'&& datum['life_exp'] > 80",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {
            "field": "region",
            "type": "nominal",
            "title": "Region"
          },
          {
            "field": "year",
            "type": "temporal",
            "title": "Year",
            "axis": {
              "format": "%Y"
            }
          },
          {
            "field": "life_exp",
            "type": "quantitative",
            "title": "Average Life Expectancy",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -15,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "field": "life_exp",
          "type": "quantitative",
          "format": ".2f"
        },
        "color": {
          "value": "black"
        },
        "opacity": {
          "condition": {
            "test": "datum['region'] == 'Africa'&& datum['life_exp'] < 55",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {
            "field": "region",
            "type": "nominal",
            "title": "Region"
          },
          {
            "field": "year",
            "type": "temporal",
            "title": "Year",
            "axis": {
              "format": "%Y"
            }
          },
          {
            "field": "life_exp",
            "type": "quantitative",
            "title": "Average Life Expectancy",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "circle",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 10,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {
          "field": "life_exp",
          "type": "quantitative",
          "format": ".2f"
        },
        "color": {
          "value": "black"
        },
        "opacity": {
          "condition": {
            "test": "datum['region'] == 'Africa'&& datum['life_exp'] < 55",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {
            "field": "region",
            "type": "nominal",
            "title": "Region"
          },
          {
            "field": "year",
            "type": "temporal",
            "title": "Year",
            "axis": {
              "format": "%Y"
            }
          },
          {
            "field": "life_exp",
            "type": "quantitative",
            "title": "Average Life Expectancy",
            "format": ".2f"
          }
        ]
      }
    }
  ],
  "config": {
    "axis": {
      "grid": false
    },
    "view": {
      "stroke": "transparent"
    }
  }
}
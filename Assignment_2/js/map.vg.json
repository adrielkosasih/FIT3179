{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#d6dee3",
  "width": "container",
  "height": 350,
  "projection": {
    "type": "equirectangular"
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 2000,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2015,
        "step": 1,
        "name": "Year:  "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/adrielkosasih/FIT3179/main/Assignment_2/js/ne_110m_admin_0_countries.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "#ddd",
        "stroke": "white",
        "strokeWidth": 1
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/adrielkosasih/FIT3179/main/Assignment_2/data/map_data_3.csv"
      },
      "transform": [
        {
          "lookup": "country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/adrielkosasih/FIT3179/main/Assignment_2/js/ne_110m_admin_0_countries.topojson",
              "format": {
                "type": "topojson",
                "feature": "ne_110m_admin_0_countries"
              }
            },
            "key": "properties.NAME"
          },
          "as": "geo"
        },
        {
          "filter": "datum.year == Year_selection"
        },
        {
          "calculate": "datum.Life_exp",
          "as": "Life Expectancy"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "#fff",
        "strokeWidth": 0.5
      },
      "encoding": {
        "shape": {
          "field": "geo",
          "type": "geojson"
        },
        "color": {
          "field": "Life Expectancy",
          "type": "quantitative",
          "scale": {
            "domain": [
              30,
              55,
              80
            ],
            "scheme": "teals"
          },
          "legend": {
            "format": ".2s"
          }
        },
        "tooltip": [
          {
            "field": "country",
            "type": "nominal",
            "title": "Suburb"
          },
          {
            "field": "Life_exp",
            "type": "quantitative",
            "title": "Life Expectancy",
            "format": ","
          },
          {
            "field": "year",
            "type": "quantitative",
            "title": "Year"
          }
        ]
      }
    },
        {
      "data": {
        "values": [
          {}
        ]
      },
      "encoding": {
        "latitude": {
          "datum": -27
        },
        "longitude": {
          "datum": 148
        }
      },
      "layer": [
        {
          "mark": {
            "type": "text",
            "fill": "white",
            "fontSize": 8,
            "align": "right",
            "baseline": "bottom",
            "x": "width",
            "text": "Australia"
          }
        }
      ]
    },
    {
      "data": {
        "values": [
          {}
        ]
      },
      "encoding": {
        "latitude": {
          "datum": 60
        },
        "longitude": {
          "datum": 110
        }
      },
      "layer": [
        {
          "mark": {
            "type": "text",
            "fill": "white",
            "fontSize": 10,
            "align": "right",
            "baseline": "bottom",
            "x": "width",
            "text": "Russia"
          }
        }
      ]
    },
    {
      "data": {
        "values": [
          {}
        ]
      },
      "encoding": {
        "latitude": {
          "datum": 37
        },
        "longitude": {
          "datum": -97
        }
      },
      "layer": [
        {
          "mark": {
            "type": "text",
            "fill": "white",
            "fontSize": 10,
            "align": "right",
            "baseline": "bottom",
            "x": "width",
            "text": "USA"
          }
        }
      ]
    },
    {
      "data": {

{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#d6dee3",
  "data": {
    "url": "https://raw.githubusercontent.com/adrielkosasih/FIT3179/main/Assignment_2/data/scatter_GDP2.csv",
    "format": {
      "type": "csv",
      "parse": {
        "year": "number",
        "Life_exp": "number",
        "GDP": "number"
      }
    }
  },
  "width": "container",
  "height": 300,
  "layer": [
    {
      "transform": [
        {
          "filter": {
            "field": "country",
            "equal": "Australia"
          }
        },
        {
          "filter": {
            "param": "year"
          }
        }
      ],
      "mark": {
        "type": "text",
        "fontSize": 100,
        "x": 200,
        "y": 100,
        "opacity": 0.06
      },
      "encoding": {
        "text": {
          "field": "year"
        }
      }
    },
    {
      "encoding": {
        "x": {
          "field": "GDP",
          "type": "quantitative",
          "scale": {
            "domain": [
              0,
              120000
            ]
          },
          "axis": {
            "tickCount": 5,
            "title": "GDP"
          }
        },
        "y": {
          "field": "Life_exp",
          "type": "quantitative",
          "scale": {
            "domain": [
              20,
              90
            ]
          },
          "axis": {
            "tickCount": 5,
            "title": "Life Expectancy"
          }
        }
      },
      "layer": [
        {
          "mark": {
            "type": "line",
            "size": 4,
            "color": "lightgray",
            "strokeCap": "round"
          },
          "encoding": {
            "detail": {
              "field": "country"
            },
            "order": {
              "field": "year"
            },
            "opacity": {
              "condition": {
                "test": {
                  "or": [
                    {
                      "param": "hovered",
                      "empty": false
                    },
                    {
                      "param": "clicked",
                      "empty": false
                    }
                  ]
                },
                "value": 0.8
              },
              "value": 0
            }
          }
        },
        {
          "params": [
            {
              "name": "year",
              "value": [
                {
                  "year": 2000
                }
              ],
              "select": {
                "type": "point",
                "fields": [
                  "year"
                ]
              },
              "bind": {
                "name": "Year",
                "input": "range",
                "min": 2000,
                "max": 2015,
                "step": 3
              }
            },
            {
              "name": "hovered",
              "select": {
                "type": "point",
                "fields": [
                  "country"
                ],
                "toggle": false,
                "on": "mouseover"
              }
            },
            {
              "name": "clicked",
              "select": {
                "type": "point",
                "fields": [
                  "country"
                ]
              }
            }
          ],
          "transform": [
            {
              "filter": {
                "param": "year"
              }
            }
          ],
          "mark": {
            "type": "circle",
            "size": 90,
            "opacity": 1
          },
          "encoding": {
            "color": {
              "field": "region",
              "title": "Region"
            }
          }
        },
        {
          "transform": [
            {
              "filter": {
                "and": [
                  {
                    "param": "year"
                  },
                  {
                    "or": [
                      {
                        "param": "clicked",
                        "empty": false
                      },
                      {
                        "param": "hovered",
                        "empty": false
                      }
                    ]
                  }
                ]
              }
            }
          ],
          "mark": {
            "type": "text",
            "yOffset": -12,
            "fontSize": 12,
            "fontWeight": "bold"
          },
          "encoding": {
            "text": {
              "field": "country"
            },
            "color": {
              "field": "region",
              "title": "Region"
            }
          }
        },
        {
          "transform": [
            {
              "filter": {
                "param": "hovered",
                "empty": false
              }
            },
            {
              "filter": {
                "not": {
                  "param": "year"
                }
              }
            }
          ],
          "layer": [
            {
              "mark": {
                "type": "circle",
                "color": "gray"
              }
            }
          ]
        }
      ]
    }
  ]
}